<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <!-- Customize the background color to represent the highlight effect -->
        <solid android:color="#6c757d" />
        <corners android:radius="10dp" />
    </shape>
</item>
<item>
    <!-- Define the default button appearance when not pressed -->
    <shape>
        <!-- Customize the background color to represent the normal state -->
        <solid android:color="#3f37c9" /> <!-- Set the desired background color -->
        <corners android:radius="10dp" /> <!-- Set a large value for radius to create a circle -->
    </shape>
</item>
</selector>